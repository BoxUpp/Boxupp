# -*- mode: ruby -*-
# vi: set ft=ruby :
Vagrant.configure("2") do |config|
	
						
		config.vm.define "taril" do |taril|
			taril.vm.provider "docker" do |d|
				d.image = "boxupp/centos-dev:V1.4"
				d.name = "taril"
				d.has_ssh= true
				d.volumes << '/var/lib/docker'
				d.vagrant_vagrantfile = "./docker/Vagrantfile"
															end
			
			taril.vm.hostname = "com.pax"
			taril.ssh.username = "root"
			taril.ssh.password = "root123"
			
			
					
			
				taril.vm.provision "puppet" do |taril|
					taril.manifests_path = "manifests"
					taril.manifest_file = "site.pp"
					taril.module_path = "../modules"
				end		
				
	
																				taril.vm.provision "shell", path: "./scripts/dock.sh", privileged:"true"
																				
				end
	end
